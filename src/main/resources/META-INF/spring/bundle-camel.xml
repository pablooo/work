<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		http://www.springframework.org/schema/context 
  		http://www.springframework.org/schema/context/spring-context.xsd
  		http://camel.apache.org/schema/spring 
  		http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- Routes -->
	<bean id="prepareXmlDataLoadProcessing"
		class="pl.eniro.smx.loader.PrepareXMLDataLoadeRouteBuilder">
	</bean>

	<!-- Routes configuration -->
	<camelContext id="camel" xmlns="http://camel.apache.org/schema/spring"
		autoStartup="false">
		<routeBuilder ref="prepareXmlDataLoadProcessing" />
	</camelContext>

    <camelContext id="camelZad1" xmlns="http://camel.apache.org/schema/spring"
                  autoStartup="false">
        <routeBuilder ref="zad1" />
    </camelContext>

    <camelContext id="camelZad2" xmlns="http://camel.apache.org/schema/spring"
                  autoStartup="true">
        <routeBuilder ref="zad2" />
    </camelContext>

	<bean id="shutdown" class="org.apache.camel.impl.DefaultShutdownStrategy">
		<property name="timeout" value="5" />
	</bean>
</beans>
